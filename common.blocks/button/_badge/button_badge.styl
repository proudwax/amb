.button .button__badge{
	background: #0068af;
	border-radius: 50%;
	display: inline-block;
	position: relative;
	box-shadow: 0 2px 2px 0 rgba(0, 0, 0, 0.14), 0 3px 1px -2px rgba(0, 0, 0, 0.2), 0 1px 5px 0 rgba(0, 0, 0, 0.12);
	color: #fff;
}

.button_size_m .button__badge{
	font-size: 10px;
	width: 18px;
	height: 18px;
	line-height: 18px;
	top: -2em;
	margin-right: -9px;
	vertical-align: bottom;
}

.button_size_l .button__badge{
	font-size: 10px;
	width: 20px;
	height: 20px;
	line-height: 20px;
	top: -20px;
	margin-right: -9px;
	vertical-align: bottom;
}
