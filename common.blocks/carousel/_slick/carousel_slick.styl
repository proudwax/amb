ctx = '.carousel_slick'
{ctx} {
    width: 100%;
    margin-left: auto;
    margin-right: auto;
    position: relative;

    transition: all 0.3s ease 0s

    img{
    	max-width: 100%;
    	object-fit: cover;
    }

    .carousel{
        &__content{
            opacity: 1;
            min-height: 10rem;
            transition: opacity 0.3s ease 0s;

            &_hidden{
                opacity: 0;
            }
        }

        &__spin{
            position: absolute;
            top: 0;
            z-index: -1;

            width: 100%;
            height: 100%;
            min-height: 10rem;

            display: inline-flex;
            align-items: center;
            justify-content: center;

            opacity: 1;
            transition: opacity 0.3s ease 0s;

            &_hidden{
                opacity: 0;
            }
        }

        &__item{
            position: relative;
        }

        &__caption{
            position: absolute;
            box-sizing: border-box;
            max-width: 50%;

            padding: 1rem;

            &_directions{
                &_bottom-left, &_bottom-center, &_bottom-right{
                    bottom: 0;
                }

                &_bottom-left{
                    left: 0;
                }

                &_bottom-center{
                    left: 50%;
                    transform: translateX(-50%);
                }

                &_bottom-right{
                    right: 0;
                }

                &_top-left, &_top-center, &_top-right{
                    top: 0;
                }

                &_top-left{
                    left: 0;
                }

                &_top-center{
                    left: 50%;
                    transform: translateX(-50%);
                }

                &_top-right{
                    right: 0;
                }

                &_center-left, &_center, &_center-right{
                    top: 50%;
                    transform: translateY(-50%);
                }

                &_center-left{
                    left: 0;
                }

                &_center{
                    left: 50%;
                    transform: translateX(-50%);
                }

                &_center-right{
                    right: 0;
                }
            }
        }
    }
}

@media only screen and (max-width: 799px) {
    {ctx} {
        .slick-prev:before, .slick-next:before{
            font-size: 2rem;
        }

        .slick-prev, .slick-next{
            width: 2rem;
            height: 2rem;
        }

        .slick-next, .slick-prev{
            z-index: 1;
        }

        .slick-prev{
            left: 0;
        }

        .slick-next{
            right: 0;
        }
    }
}

@media only screen and (min-width: 420px) {
  {ctx}{
    max-width: 100%;
  }
}

@media only screen and (min-width: 800px) {
  {ctx}{
    max-width: calc(100% - 160px);
  }
}

@media only screen and (min-width: 1200px) {
  {ctx}{
    max-width: 960px;
  }
}

@media only screen and (min-width: 1450px) {
  {ctx}{
    max-width: 1200px;
  }
}

@media screen and (orientation: portrait) {
  {ctx}{
    width: 100%;
  }
}
