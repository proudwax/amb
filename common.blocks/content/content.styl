ctx = '.content'
{ctx} {
  box-sizing: border-box;
  position: relative;
  background-color: #fff;
  z-index: 1;

  width: auto;

  &:after{
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: -1;

    content: '';
    box-shadow: 0 -1px 0 #e5e5e5, 0 0 2px rgba(0, 0, 0, 0.12), 0 2px 4px rgba(0, 0, 0, 0.24);
  }

  &__container{
    overflow: auto;
  }

}
