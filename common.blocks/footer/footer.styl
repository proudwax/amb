ctx = '.footer'
{ctx} {
  padding: .5rem 1rem;

  &__container{
    max-width: calc(100% - 2rem);
    margin: 0 auto;
  }

  @media only screen and (min-width: 48em) {
    &__container{
      max-width: calc(100% - 240px);
    }
  }

  @media only screen and (min-width: 75em) {
    &__container{
      max-width: 75rem;
    }
  }

  @media screen and (orientation: portrait) {
    &__container{
      max-width: calc(100% - 4rem);
    }
  }
}
