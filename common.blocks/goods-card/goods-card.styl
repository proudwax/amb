ctx = '.goods-card'
{ctx} {
    box-sizing: border-box;
    position: relative;
    margin-top: 1rem;

    &__container{
        box-sizing: border-box;
        width: 100%;
        position: relative;
        margin: 0 auto;

        display: flex;
        flex-flow: row wrap;

        background: #fff;
        border: 1px solid rgba(0, 0, 0, .2);
    }

    &__header{
        box-sizing: border-box;
        width: 100%;

        padding: 1rem;

        border-bottom: 1px solid rgba(0, 0, 0, .2);
    }

    &__description{
        box-sizing: border-box;
        flex-basis: 100%;
        max-width: 100%;

        border-right: 1px solid rgba(0, 0, 0, .2);
        border-bottom: 1px solid rgba(0, 0, 0, .2);

        padding: 1rem;

        transition: all 0.3s ease 0s;
    }

    &__carousel{
        box-sizing: border-box;
        flex-basis: 100%;
        max-width: 100%;

        border-bottom: 1px solid rgba(0, 0, 0, .2);

        transition: all 0.3s ease 0s;
    }

    &__buy{
        display: flex;
        align-items: center;
        margin-bottom: 3rem;
    }

    &__price{
        flex-basis: 100%;
        max-width: 100%;

        font-size: 28px;
        font-weight: 400;
        line-height: 32px;
    }

    &__actions{
        flex-basis: 100%;
        max-width: 100%;
    }
}

@media only screen and (min-width: 420px) {
    {ctx}{
        &__container{
            max-width: 100%;
        }
    }
}

@media only screen and (min-width: 800px) {
    {ctx}{
        &__container{
            max-width: calc(100% - 160px);
        }

        &__description{
            flex-basis: 50%;
            max-width: 50%;
        }

        &__carousel{
            flex-basis: 50%;
            max-width: 50%;
        }

        &__price{
            flex-basis: 50%;
            max-width: 50%;
        }

        &__actions{
            flex-basis: 50%;
            max-width: 50%;
            text-align: right;
        }
    }
}

@media only screen and (min-width: 1200px) {
    {ctx}{
        &__container{
            max-width: 960px;
        }

        &__description{
            flex-basis: 50%;
            max-width: 50%;
        }

        &__carousel{
            flex-basis: 50%;
            max-width: 50%;
        }
    }
}

@media only screen and (min-width: 1450px) {
    {ctx}{
        &__container{
            max-width: 1200px;
        }
    }
}

@media screen and (orientation: portrait) {
  {ctx}{
    width: 100%;
  }
}
