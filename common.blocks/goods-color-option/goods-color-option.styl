ctx = '.goods-color-option'
{ctx} {
    box-sizing: border-box;
    position: relative;

    &__title{
        font-size: 18px;
        font-weight: 500;
        line-height: 24px;
        margin: 10px 0;
    }

    &__list{
        list-style: none;
        margin: 0;
        padding: 0;
    }

    &__item{
        box-sizing: border-box;

        display: inline-block;
        width: 50px;
        height: 50px;

        margin-right: 1rem;

        border: 1px solid transparent;
        border-radius: 50%;

        transition: all 0.3s ease 0s;

        &:hover{
            border-color: #db3727;
        }

        &_active{
            border-color: #0068af;

            &:hover{
                border-color: #0068af;
            }
        }
    }
}
