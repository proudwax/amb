ctx = '.goods-list-promo'
{ctx} {
    display: flex;
    flex-flow: row wrap;
    margin-top: 1rem;
    margin-bottom: 1rem;

    &__container{
        box-sizing: border-box;
        width: 100%;
        position: relative;
        margin: 0 auto;

        display: flex;
        flex-flow: row wrap;

        background: #fff;
        border: 1px solid rgba(0, 0, 0, .2);
    }

    &__item{
        box-sizing: border-box;
        flex-basis: 100%;
        max-width: 100%;

        border-right: 1px solid rgba(0, 0, 0, .2);
        border-bottom: 1px solid rgba(0, 0, 0, .2);

        transition: all 0.3s ease 0s;
    }
}

@media only screen and (min-width: 420px) {
    {ctx}{
        &__container{
            max-width: 100%;
        }
        &__item{
            flex-basis: 50%;
            max-width: 50%;
        }
    }
}

@media only screen and (min-width: 800px) {
    {ctx}{
        &__container{
            max-width: calc(100% - 160px);
        }
        &__item{
            flex-basis: 33.333%;
            max-width: 33.333%;
        }
    }
}

@media only screen and (min-width: 1200px) {
    {ctx}{
        &__container{
            max-width: 960px;
        }
        &__item{
            flex-basis: 25%;
            max-width: 25%;
        }
    }
}

@media only screen and (min-width: 1450px) {
    {ctx}{
        &__container{
            max-width: 1200px;
        }
        &__item{
            flex-basis: 20%;
            max-width: 20%;
        }
    }
}

@media screen and (orientation: portrait) {
  {ctx}{
    width: 100%;
  }
}
