ctx = '.goods'
{ctx} {
    box-sizing: border-box;
    position: relative;

    background: rgba(255, 255, 255, 1);
    overflow: hidden;
    z-index: 1;

    transition: box-shadow 0.3s ease 0s;

    &:hover{
        box-shadow: 0 2px 8px 0 rgba(0, 0, 0, 0.3);
        z-index: 10;
    }

    &__container{
        box-sizing: border-box;

        width: 100%;
        height: 100%;
        padding: 1rem;
    }

    &__title{
        margin: 0;
        padding: 0;

        font-size: 21px;
        font-weight: 300;
        line-height: 24px;
        text-overflow: ellipsis;
        overflow: hidden;

        {ctx}__link{
            white-space: nowrap;
        }
    }

    &__link{
        color: #333;
        opacity: 0.8;
        text-decoration: none;
        transition: all 0.3s ease 0s;

        &:hover{
            color: #0068af;
            opacity: 1;
        }
    }

    &__image{
        display: inline-block;
        width: 100%;
        line-height: 1;
        text-align: center;

        & .image{
            width: 100%;
        }
    }

    &__group{
        display: inline-block;
        position: relative;
        width: 100%;

        {ctx}__price{
            float: left;
        }

        {ctx}__actions{
            float: right;
        }
    }

    &__price{
        display: inline-block;

        font-size: 18px;
        line-height: 38px;
        font-weight: 500;
    }

    &__actions{
        display: inline-block;
        line-height: 38px;
    }
}
