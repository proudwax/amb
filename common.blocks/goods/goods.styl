ctx = '.goods'
{ctx} {
    box-sizing: border-box;
    position: relative;

    background: rgba(255, 255, 255, 1);
    overflow: hidden;
    z-index: 1;

    transition: box-shadow 0.3s ease 0s;

    &__container{
        box-sizing: border-box;
        overflow: hidden;

        width: 100%;
        height: 100%;
        padding: 1rem;
    }

    &__title{
        margin: 0 0 1rem 0;
        padding: 0;

        font-size: 21px;
        font-weight: 300;
        line-height: 24px;
        text-overflow: ellipsis;
        overflow: hidden;

        {ctx}__link{
            white-space: nowrap;
        }
    }

    &__link{
        color: #0068af;
        opacity: 0.8;
        text-decoration: none;
        transition: all 0.3s ease 0s;

        &:hover{
            color: #db3727;
            opacity: 1;
        }
    }

    &__lable{
        margin-top: -10px;
        left: 1rem;
    }

    &__image{
        display: inline-block;
        width: 100%;
        line-height: 1;
        text-align: center;

        & .image{
            width: 100%;
        }
    }

    &__group{
        display: inline-block;
        position: relative;
        width: 100%;

        {ctx}__price{
            float: left;
        }

        {ctx}__actions{
            float: right;
        }
    }

    &__price{
        position: relative;
        display: inline-block;

        font-size: 18px;
        line-height: 38px;
        font-weight: 500;
    }

    &__price-old{
        position: absolute;
        top: -5px;

        font-size: 15px;
        line-height: 15px;
        font-weight: 400;
        color: rgba(0, 0, 0, 0.5);

        &:after{
            position: absolute;
            top: 40%;

            display: block;
            content: '';

            height: 2px;
            width: 100%;
            background: rgba(255, 0, 0, 0.5);
            transform: rotate(-10deg);
        }
    }

    &__actions{
        display: inline-block;
        line-height: 38px;
    }

    &__properties{
        margin-top: 1rem;
    }

    &__properties-list-item{
        white-space: nowrap;
        text-overflow: ellipsis;
        overflow: hidden;
    }
}
