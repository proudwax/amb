ctx = '.phone'
{ctx} {
    display: flex;
    flex-flow: row nowrap;
    align-items: center;
    text-decoration: none;

    &__icon{
        padding-right: 3px;
        height: 22px;
        width: 24px;
        fill: #fff;
    }

    &__text{
        line-height: 3rem;
        font-size: 1.5rem;
        color: #fff;
        text-decoration: none;

        transition: color .3s ease 0s;

        &:before{
            content: '+';
            line-height: 3rem;
            font-size: 1.5rem;
        }

        &:hover{
            color: #4fc3f1;
        }
    }
}
