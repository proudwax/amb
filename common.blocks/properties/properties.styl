ctx = '.properties'
{ctx} {
    box-sizing: border-box;
    position: relative;

    font-size: 15px;
    line-height: 18px;

    &__title{
        font-weight: 500;
        font-size: 18px;
        line-height: 24px;
        
        margin: 10px 0;
    }

    &__row{
        position: relative;

        margin: 0;

        background: #fff;
    }

    &__key, &__value{
        display: inline-block;
        background: inherit;

        width: 50%;

        padding: 0;
        margin: 0 0 3px;
    }

    &__value{
        position: relative;
        z-index: 1;
    }

    &__key{
        background: inherit;

        &:after{
            content: '';
            position: absolute;
            right: 5px;
            left: 0;

            height: 1px;
            margin-top: .85em;

            background: url('data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAAAMAAAABCAAAAAA+i0toAAAAAnRSTlMA/1uRIrUAAAAMSURBVHheY7j1/z8ABY8C2UtBe8oAAAAASUVORK5CYII=');
            background-repeat: repeat-x;
            background-position: 0 0;
        }
    }

    &__name{
        position: relative;
        z-index: 2;

        padding-right: 5px;

        background: inherit;
    }
}
