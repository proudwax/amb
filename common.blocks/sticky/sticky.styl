ctx = '.sticky'
{ctx} {
	position: relative;

	&__container{
		transition: all 0.3s ease 0.1s;
	}

	&__container_shadow:after{
		content: '';

		position: absolute;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;

		z-index: -1;
		box-shadow:0 5px 5px 0 rgba(0,0,0,.14),0 10px 10px 0 rgba(0,0,0,.12),0 4px 4px -1px rgba(0,0,0,.2);
	}

	&__backing{
		display: none;
		position: relative;
	}

	&_fixed > &__container{
		position: fixed;
		background: transparent;
		top: 0;
		z-index: 10;
		width: 100%;
	}

	&_fixed > &__backing{
		display: block;
	}

	@media only screen and (min-width: 420px) {
		&_fixed > &__container{
			width: 100%;
		}
	}

	@media only screen and (min-width: 800px) {
		&_fixed > &__container{
			width: calc(100% - 160px);
		}
	}

	@media only screen and (min-width: 1200px) {
		&_fixed > &__container{
			width: 960px;
		}
	}

	@media only screen and (min-width: 1450px) {
		&_fixed > &__container{
			width: 1200px;
		}
	}
}
